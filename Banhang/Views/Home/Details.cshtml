@model Banhang.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}
<div class="row">
    <div class="col-md-5">
        <img class="img-fluid rounded" src="@(string.IsNullOrEmpty(Model.ImageUrl)?"/images/noimg.png":Model.ImageUrl)" alt="@Model.ProductName" />
    </div>
    <div class="col-md-7">
        <h3 class="mb-1">@Model.ProductName</h3>
        <div class="text-muted mb-2">@Model.CategoryName</div>
        <h4 class="text-danger mb-3">@Model.Price.ToString("#,0") đ</h4>

        @if (!string.IsNullOrEmpty(Model.Color))
        {
            <p><strong>Màu:</strong> @Model.Color</p>
        }
        @if (!string.IsNullOrEmpty(Model.Size))
        {
            <p><strong>Kích cỡ:</strong> @Model.Size</p>
        }
        <p><strong>Tồn kho:</strong> @Model.Stock</p>

        <p class="mt-3">@Html.Raw(Model.Description ?? "")</p>

        <form method="post" asp-controller="Cart" asp-action="Add">
            <input type="hidden" name="productId" value="@Model.ProductID" />
            <div class="input-group w-auto">
                <input name="quantity" type="number" value="1" min="1" class="form-control" />
                <button class="btn btn-success">Thêm vào giỏ</button>
            </div>
        </form>
    </div>
</div>
