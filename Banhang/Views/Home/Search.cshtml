@model List<Banhang.Models.Product>
@{
    ViewData["Title"] = "Kết quả tìm kiếm";
    var q = ViewBag.Query as string ?? "";
}
<h4>Kết quả cho: "<em>@q</em>"</h4>
<hr />
@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-warning">Không tìm thấy sản phẩm phù hợp.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var p in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img class="card-img-top" src="@(string.IsNullOrEmpty(p.ImageUrl)?"/images/noimg.png":p.ImageUrl)" alt="@p.ProductName" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@p.ProductName</h5>
                        <div class="fw-bold mb-3">@p.Price.ToString("#,0") đ</div>
                        <a class="btn btn-outline-primary mt-auto" asp-controller="Home" asp-action="Details" asp-route-id="@p.ProductID">Xem</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
