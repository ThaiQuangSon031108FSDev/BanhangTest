<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Web B√°n H√†ng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="loader" id="loader">
        <div class="spinner"></div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark sticky-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">üõí Web B√°n H√†ng</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Trang ch·ªß</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Cart" asp-action="Index">Gi·ªè h√†ng</a></li>
                    @if (Context.Session.GetString("Username") != null)
                    {
                        var roleName = Context.Session.GetString("RoleName");
                        @if (!string.IsNullOrEmpty(roleName) && (roleName == "Admin" || roleName == "Employee"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Qu·∫£n tr·ªã</a>
                            </li>
                        }
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Logout">ƒêƒÉng xu·∫•t</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">ƒêƒÉng nh·∫≠p</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">ƒêƒÉng k√Ω</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main>
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Navbar scroll effect
        window.addEventListener('scroll', () => {
            const navbar = document.getElementById('mainNav');
            if (navbar) {
                if (window.scrollY > 50) {
                    navbar.classList.add('scrolled');
                } else {
                    navbar.classList.remove('scrolled');
                }
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
