@using System.Security.Claims
@using System.Text.Encodings.Web
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Web B√°n H√†ng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="loader" id="loader">
        <div class="spinner"></div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark sticky-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">üõí Web B√°n H√†ng</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-2">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Trang ch·ªß</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Cart" asp-action="Index">Gi·ªè h√†ng</a></li>
                    @{ var isAuthenticated = Context.User.Identity?.IsAuthenticated ?? false; }
                    @if (isAuthenticated)
                    {
                        var roleName = Context.User.FindFirstValue(ClaimTypes.Role);
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Profile">H·ªì s∆°</a></li>
                        @if (!string.IsNullOrEmpty(roleName) && (roleName == "Admin" || roleName == "Employee"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Qu·∫£n tr·ªã</a>
                            </li>
                        }
                        <li class="nav-item text-white-50 small d-none d-lg-block">Xin ch√†o, @Context.User.Identity?.Name!</li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Logout">ƒêƒÉng xu·∫•t</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">ƒêƒÉng nh·∫≠p</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">ƒêƒÉng k√Ω</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main>
        @RenderBody()
    </main>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" referrerpolicy="no-referrer"></script>

    <script>
        // Navbar scroll effect
        window.addEventListener('scroll', () => {
            const navbar = document.getElementById('mainNav');
            if (navbar) {
                if (window.scrollY > 50) {
                    navbar.classList.add('scrolled');
                } else {
                    navbar.classList.remove('scrolled');
                }
            }
        });
    </script>

    <script>
        window.addEventListener('load', () => {
            const loader = document.getElementById('loader');
            if (loader) {
                loader.classList.add('hidden');
            }
        });

        toastr.options = {
            closeButton: true,
            progressBar: true,
            newestOnTop: true,
            positionClass: 'toast-top-right',
            timeOut: 5000
        };

        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('form[data-loading="true"]').forEach(form => {
                form.addEventListener('submit', () => {
                    const loader = document.getElementById('loader');
                    if (loader) {
                        loader.classList.remove('hidden');
                    }
                });
            });

            document.querySelectorAll('form[data-confirm]').forEach(form => {
                form.addEventListener('submit', evt => {
                    if (form.dataset.confirmHandled === 'true') {
                        return;
                    }

                    evt.preventDefault();
                    const message = form.dataset.confirm ?? 'B·∫°n c√≥ ch·∫Øc ch·∫Øn?';
                    Swal.fire({
                        title: 'X√°c nh·∫≠n',
                        text: message,
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: 'ƒê·ªìng √Ω',
                        cancelButtonText: 'H·ªßy',
                        customClass: {
                            confirmButton: 'btn btn-danger me-2',
                            cancelButton: 'btn btn-outline-secondary'
                        },
                        buttonsStyling: false
                    }).then(result => {
                        if (result.isConfirmed) {
                            form.dataset.confirmHandled = 'true';
                            form.submit();
                        }
                    });
                });
            });
        });
    </script>

    @if (TempData["SuccessMessage"] is string successMessage)
    {
        <script>toastr.success("@JavaScriptEncoder.Default.Encode(successMessage)");</script>
    }
    @if (TempData["WarningMessage"] is string warningMessage)
    {
        <script>toastr.warning("@JavaScriptEncoder.Default.Encode(warningMessage)");</script>
    }
    @if (TempData["Error"] is string errorMessage)
    {
        <script>toastr.error("@JavaScriptEncoder.Default.Encode(errorMessage)");</script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
