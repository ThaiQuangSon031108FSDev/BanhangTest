@model Banhang.Models.User
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Thêm nhân viên";
}

<partial name="_Breadcrumb" />
<h4>Thêm nhân viên</h4>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
<form method="post">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-4 mb-3"><label class="form-label">Username</label><input class="form-control" asp-for="Username" required /></div>
        <div class="col-md-4 mb-3"><label class="form-label">Mật khẩu</label><input class="form-control" name="password" type="password" required /></div>
        <div class="col-md-4 mb-3">
            <label class="form-label">Quyền</label>
            <select class="form-select" name="isAdmin">
                <option value="false">Employee</option>
                <option value="true">Admin</option>
            </select>
        </div>
        <div class="col-md-6 mb-3"><label class="form-label">Họ tên</label><input class="form-control" asp-for="FullName" required /></div>
        <div class="col-md-6 mb-3"><label class="form-label">Email</label><input class="form-control" asp-for="Email" type="email" required /></div>
        <div class="col-md-6 mb-3"><label class="form-label">Điện thoại</label><input class="form-control" asp-for="Phone" /></div>
    </div>
    <button class="btn btn-success">Lưu</button>
    <a class="btn btn-secondary" asp-action="Index">Hủy</a>
</form>
    