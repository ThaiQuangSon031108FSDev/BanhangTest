            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-md-block sidebar">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")"
                               asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                ğŸ“Š Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Product" ? "active" : "")"
                               asp-area="Admin" asp-controller="Product" asp-action="Index">
                                ğŸ“¦ Sáº£n pháº©m
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Order" ? "active" : "")"
                               asp-area="Admin" asp-controller="Order" asp-action="Index">
                                ğŸ“‹ ÄÆ¡n hÃ ng
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Category" ? "active" : "")"
                               asp-area="Admin" asp-controller="Category" asp-action="Index">
                                ğŸ—‚ï¸ Danh má»¥c
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Customer" ? "active" : "")"
                               asp-area="Admin" asp-controller="Customer" asp-action="Index">
                                ğŸ‘¥ KhÃ¡ch hÃ ng
                            </a>
                        </li>
                        @if (isAdmin)
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Employee" ? "active" : "")"
                                   asp-area="Admin" asp-controller="Employee" asp-action="Index">
                                    ğŸ‘” NhÃ¢n viÃªn
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Report" ? "active" : "")"
                               asp-area="Admin" asp-controller="Report" asp-action="Index">
