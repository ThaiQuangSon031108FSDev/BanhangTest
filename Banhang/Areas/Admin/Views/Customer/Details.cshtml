@model Banhang.Models.ViewModels.CustomerDetailViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Chi tiết khách hàng";
}

<partial name="_Breadcrumb" />

<div class="row g-4">
    <div class="col-lg-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h5 class="card-title">Thông tin khách hàng</h5>
                <p class="mb-1"><strong>Họ tên:</strong> @Model.Customer.FullName</p>
                <p class="mb-1"><strong>Username:</strong> @Model.Customer.Username</p>
                <p class="mb-1"><strong>Email:</strong> @Model.Customer.Email</p>
                <p class="mb-1"><strong>Điện thoại:</strong> @Model.Customer.Phone</p>
                <p class="mb-0"><strong>Ngày tạo:</strong> @Model.Customer.CreatedAt.ToString("dd/MM/yyyy")</p>
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="card-title mb-0">Đơn hàng gần đây</h5>
                    <span class="badge bg-primary">@Model.Orders.Count đơn</span>
                </div>
                @if (!Model.Orders.Any())
                {
                    <div class="alert alert-info">Khách hàng chưa có đơn hàng nào.</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped mb-0">
                            <thead>
                                <tr>
                                    <th>Mã đơn</th>
                                    <th>Ngày đặt</th>
                                    <th>Trạng thái</th>
                                    <th>Tổng tiền</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.Orders)
                                {
                                    <tr>
                                        <td>#@order.OrderID</td>
                                        <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            <span class="badge bg-secondary">@order.Status</span>
                                        </td>
                                        <td>@order.TotalAmount.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</td>
                                        <td class="text-end">
                                            <a class="btn btn-sm btn-outline-primary" asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-id="@order.OrderID">Xem</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
